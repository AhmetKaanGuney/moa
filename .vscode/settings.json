{
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.pylamaEnabled": true,
    "python.linting.flake8Enabled": false,
    "code-runner.defaultLanguage": "python",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.detectLocale": "on",
    "python.formatting.provider": "black",
    // "python.formatting.provider": "black",
    // "editor.formatOnSave": true,
    // "python.formatting.blackArgs": [
    //     "--line-length",
    //     "119"
    // ],
    "editor.bracketPairColorization.enabled": true,
    "workbench.colorCustomizations": {
        "editorError.foreground": "#ff0000",
        "editorWarning.foreground": "#ff990075",
        "editorInfo.foreground": "#00aeff00",
        "editorBracketMatch.border": "#686868",
        "editorBracketMatch.background": "#2f2f2f",
        "editor.selectionHighlightBorder": "#bbb38d85",
        "editor.selectionHighlightBackground": "#58585862",
        "editor.selectionBackground": "#5858587e"
    },
    "files.trimTrailingWhitespace": true,
    "liveServer.settings.multiRootWorkspaceName": "moa",
}